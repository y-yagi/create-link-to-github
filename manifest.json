{
  "name": "Create link to GitHub",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Create a link to GitHub with markdown",
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["script.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  }

}
